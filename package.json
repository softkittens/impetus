{
  "name": "sparkle",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot index.ts",
    "start": "bun index.ts",
    "build": "bun build index.ts --outdir dist --target bun",
    "build:browser": "bun build src/index.ts --outfile app/sparkle.js --target browser --format esm --minify",
    "build:watch": "SPARKLE_WATCH=1 bun serve.ts",
    "serve": "bun serve.ts",
    "dev:watch": "SPARKLE_WATCH=1 bun serve.ts",
    "test": "bun test",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
